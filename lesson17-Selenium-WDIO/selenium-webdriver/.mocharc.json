{
    "require": ["tsx", "./hooks/mocha-global-setup.hook.ts"],
    "retries": 2,
    "extension": ["ts"],
    "spec": "specs/**/*.spec.ts",
    "reporter": "mochawesome",
    "reporter-option": [
    "reportDir=mochawesome-report",
    "reportFilename=report",
    "html=true",
    "json=true"
    ],
    "timeout": 60000
}

